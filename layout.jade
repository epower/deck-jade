!!! 5
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=1024, user-scalable=no")

    block title

    //Required stylesheet 
    link(rel="stylesheet", href="bower_components/deck.js/core/deck.core.css")

    //Extension CSS files go here. Remove or add as needed. 
    link(rel="stylesheet", href="bower_components/deck.js/extensions/goto/deck.goto.css")
    link(rel="stylesheet", href="bower_components/deck.js/extensions/menu/deck.menu.css")
    link(rel="stylesheet", href="bower_components/deck.js/extensions/navigation/deck.navigation.css")
    link(rel="stylesheet", href="bower_components/deck.js/extensions/status/deck.status.css")
    link(rel="stylesheet", href="bower_components/deck.js/extensions/hash/deck.hash.css")
    link(rel="stylesheet", href="bower_components/deck.js/extensions/scale/deck.scale.css")

    //Style theme. More available in /themes/style/ or create your own. 
    link(rel="stylesheet", href="bower_components/deck.js/themes/style/neon.css")

    //Transition theme. More available in /themes/transition/ or create your own. 
    link(rel="stylesheet", href="bower_components/deck.js/themes/transition/fade.css")

    //Required Modernizr file 
    script(src="bower_components/deck.js/modernizr.custom.js")

  body.deck-container
    block content


    //Begin extension snippets. Add or remove as needed. 

    //deck.navigation snippet 
    a.deck-prev-link(href="#", title="Previous") &#8592;
    a.deck-next-link(href="#", title="Next") &#8594;

    //deck.status snippet 
    p.deck-status
      span.deck-status-current
      /
      span.deck-status-total


    //deck.hash snippet 
    a.deck-permalink(href=".", title="Permalink to this slide") #

    //End extension snippets. 


    //Required JS files. 
    script(src="bower_components/deck.js/jquery-1.7.2.min.js")
    script(src="bower_components/deck.js/core/deck.core.js")

    //Extension JS files. Add or remove as needed. 
    script(src="bower_components/deck.js/core/deck.core.js")
    script(src="bower_components/deck.js/extensions/hash/deck.hash.js")
    script(src="bower_components/deck.js/extensions/menu/deck.menu.js")
    script(src="bower_components/deck.js/extensions/goto/deck.goto.js")
    script(src="bower_components/deck.js/extensions/status/deck.status.js")
    script(src="bower_components/deck.js/extensions/navigation/deck.navigation.js")
    script(src="bower_components/deck.js/extensions/scale/deck.scale.js")

    //Initialize the deck. You can put this in an external file if desired. 
    script.
      $(function() {
              $.deck('.slide');
      });
